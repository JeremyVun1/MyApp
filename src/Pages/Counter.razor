@page "/counter"

@using MyApp.Services;
@inject ICounterService counterService;

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCounter">Increment</button>
<button class="btn btn-primary" @onclick="DecrementCounter">Decrement</button>

@code {
    private int currentCount = 0;

    protected override async Task OnInitializedAsync()
    {
        currentCount = await counterService.GetCount();
    }

    private void IncrementCounter()
    {
        counterService.IncrementCounter();
        currentCount ++;
    }

    private void DecrementCounter()
    {
        counterService.DecrementCounter();
        currentCount --;
    }
}
